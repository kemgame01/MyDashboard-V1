rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isRootAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isRootAdmin == true;
    }

    function isShopOwner(shopId) {
  return isRootAdmin() ||
    (
      isSignedIn() &&
      exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedShopIds.hasAny([shopId])
    );
}
    
    function hasShopAccess(shopId) {
  return isShopOwner(shopId);
}

    match /users/{userId} {
      // Always allow users to read their own profile so isRootAdmin() can be checked
      allow read: if request.auth.uid == userId || isRootAdmin();

      allow write: if isRootAdmin() ||
                      (userId == request.auth.uid && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isRootAdmin', 'role', 'assignedShops']));
    }

    match /shops/{shopId} {
      allow read: if isRootAdmin() || hasShopAccess(shopId);

      allow write: if isRootAdmin() || isShopOwner(shopId);
    }

    match /shopInvitations/{invitationId} {
      allow read: if isRootAdmin() ||
                     isShopOwner(resource.data.shopId) ||
                     (isSignedIn() && resource.data.email == request.auth.token.email);

      allow create: if isRootAdmin() || isShopOwner(request.resource.data.shopId);
      allow update: if isRootAdmin() || 
                       isShopOwner(resource.data.shopId) ||
                       (isSignedIn() && resource.data.email == request.auth.token.email);
      allow delete: if isRootAdmin() || isShopOwner(resource.data.shopId);
    }

    match /auditLogs/{logId} {
      allow read: if isRootAdmin();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    match /users/{userId}/customers/{customerId} {
      allow read, write: if isRootAdmin() || userId == request.auth.uid;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
